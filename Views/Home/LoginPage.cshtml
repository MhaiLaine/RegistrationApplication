@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!--<p ng-init="fetchFunc()"></p>--> @*fetch String then turn to array again*@

<div class="row center" style="width: 100%; height: 7em;">
	<div class="row">
		<div class="col s12 m12 l12"></div>
	</div>
</div>
        
<div class="row center">
    <div class="col s6 m6 l6"></div>
    
        @*Login Form*@
        <div class="col s5 m5 l5">
            <div class="relative-container" style="position: relative; width: 100%;">
                <div class="col s12 m12 l12">


                    @* Saan Kakain? Logo *@
                    <div class="skLogo">
                        <img src="~/Content/assets/skLogo.png" style="max-width: 11em; height: auto;">
                    </div>


                    <div class="card cardGlassmorphism">
                        <form name="loginForm" class="card-content black-text">
                            <div class="row">

                                @* LOG IN TITLE *@
                                <div class="title-image">
                                    <img src="~/Content/assets/login.png" style="max-width: 18em; height: auto;">
                                </div>

                                <div class="row usernamePasswordContainer">
                                    @*Username Form Field
                                        VALIDATION: Character count (3-15)*@
                                    <div class="input-field col s12 m12 l12">
                                        <i class="material-icons prefix">face</i>
                                        <input id="username" name="username" type="text" class="validate" ng-model="username" required>
                                        <label for="username">Username</label>

                                        <span class="helper-text" ng-if="(loginForm.username.$touched || loginForm.username.$dirty)">
                                            <span ng-if="loginForm.username.$error.required">Username is required.</span>

                                        </span>
                                    </div>


                                    @*Password Form Field*@
                                    <div class="input-field col s12 m12 l12">
                                        <i class="material-icons prefix">lock_outline</i>
                                        <input id="userPassword" name="userPassword" type="password" class="validate" ng-model="userPassword"
                                               ng-minlength="8"
                                               ng-maxlength="20"
                                               required>
                                        <label for="userPassword">Password</label>

                                        <span class="helper-text" ng-if="(loginForm.userPassword.$touched || loginForm.userPassword.$dirty)">
                                            <span ng-if="loginForm.userPassword.$error.required">Password is required.</span>

                                        </span>
                                    </div>
                                </div>


                                @*Login Button*@
                                <div class="col s12 m12 l12" style="margin-top: 2em;">
                                    <a class="waves-effect waves-light btn-large col s12 m12 l12 green darken-1" ng-click="loginFunction()" ng-disabled="loginForm.$invalid">Login</a>
                                </div>

                            </div>

                        </form>
                    </div>
                </div>
    </div>
</div>

    <div class="col s1 m1 l1"></div>

</div>
